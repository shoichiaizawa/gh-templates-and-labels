    },
    "perf": {
      "description": "A code change that improves performance",
      "title": "Performance Improvements"
    },
    "test": {
      "description": "Adding missing tests or correcting existing tests (example scopes: jest, storybook)",
      "title": "Tests"
    },
    "build": {
      "description": "Changes that affect the build system or external dependencies (npm, webpack, babel)",
      "title": "Builds"
    },
    "ci": {
